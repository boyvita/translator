 {
    "name": "Translator",
    "version": "1.0",
    "description": "Translate text",
    "manifest_version": 2,

    "content_script": [
    	{
    		"matches": ["<all_urls"],
    		"js": ["content.js"]
    	}
    ],

    "permissions": [
    	"storage", "tabs"
    ],

 	"browser_action": {
 		"default_popup": "popup.html"
 	},

 	"icons": {
 		"16": "icon.png",
 		"40": "icon.png",
 		"128": "icon.png"
 	}
}